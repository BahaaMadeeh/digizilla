<odoo>
    <!-- Kanban View -->
    <record id="view_kanban_digizilla" model="ir.ui.view">
        <field name="name">digizilla.kanban</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <kanban Create="false">
                <field name="name"/>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                            <div><field name="gender"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View -->
    <record id="view_tree_digizilla" model="ir.ui.view">
        <field name="name">digizilla.tree</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <tree create = "false">
                <field name="name"/>
                <field name="gender"/>
                <field name="country_id"/>
                <field name="joining_date"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_form_digizilla" model="ir.ui.view">
        <field name="name">digizilla.form</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <form string="Digizilla Record">
                <header>
                    <button type="object" name="action_print_pdf" string="Print PDF" class="btn-primary" icon="fa fa-file-pdf-o"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="country_id" options="{'no_create': True}"/>
                        <field name="joining_date"/>
                        <field name="tags" widget="many2many_tags"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="Comments">
                            <field name="comments"/>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Logs Tree View -->
    <record id="view_tree_digizilla_log" model="ir.ui.view">
        <field name="name">digizilla.log.tree</field>
        <field name="model">digizilla.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="record_id"/>
                <field name="action"/>
                <field name="description"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
</odoo>
