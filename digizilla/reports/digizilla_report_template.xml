<odoo>
    <template id="report_template">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Digizilla Report</h2>
                <p><strong>Name:</strong> <span t-field="doc.name"/></p>
                <p><strong>Gender:</strong> <span t-field="doc.gender"/></p>
                <p><strong>Country:</strong> <span t-field="doc.country_id.name"/></p>
                <p><strong>Joining Date:</strong> <span t-field="doc.joining_date"/></p>
                <p><strong>Company:</strong> <span t-field="doc.company_id.name"/></p>
                <p><strong>Notes:</strong> <span t-field="doc.notes"/></p>
                <p><strong>Comments:</strong> <span t-field="doc.comments"/></p>
            </div>
        </t>
    </template>
</odoo>