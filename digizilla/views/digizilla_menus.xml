<odoo>
    

    <!-- Record Action -->
    <record id="action_digizilla_records" model="ir.actions.act_window">
        <field name="name">Digizilla Records</field>
        <field name="res_model">digizilla.record</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Digizilla Record
            </p>
        </field>
    </record>


    <!--Log Action-->
    <record id="action_digizilla_log" model="ir.actions.act_window">
        <field name="name">Log</field>
        <field name="res_model">digizilla.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Main Menu -->
    <menuitem id="menu_digizilla_main" name="Digizilla"/>

    <!-- Submenus -->
    <menuitem id="menu_digizilla_records" 
              name="Records" 
              parent="menu_digizilla_main" 
              action="action_digizilla_records"/>

    <menuitem id="menu_digizilla_log" 
              name="Log" 
              parent="menu_digizilla_main" 
              action="action_digizilla_log"/>
              
</odoo>
